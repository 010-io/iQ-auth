# iQ-auth Environment Configuration Example
# Copy this file to .env and fill in your values
# NEVER commit .env to version control!

# Core Configuration
NODE_ENV=development
LOG_LEVEL=info

# Creator & Version Seeds (for auto-versioning)
CREATOR_SEED=your-creator-seed-here
VERSION_SEED=auto-generated

# Database (optional - defaults to in-memory)
# DATABASE_URL=postgresql://user:password@localhost:5432/iqauth
# REDIS_URL=redis://localhost:6379

# AI Integrations (all optional)
# Ollama (local LLM)
OLLAMA_API_URL=http://localhost:11434
OLLAMA_MODEL=llama3.1

# WINWIN AI (Ukrainian LLM - когда будет доступен)
# WINWIN_API_KEY=
# WINWIN_API_URL=

# Gemini (optional)
# GEMINI_API_KEY=

# OpenAI (optional)
# OPENAI_API_KEY=

# Plugin Configurations
# FIDO2
FIDO2_RP_NAME=iQ-auth Demo
FIDO2_RP_ID=localhost
FIDO2_ORIGIN=http://localhost:3000

# Diia.gov.ua
# DIIA_CLIENT_ID=
# DIIA_CLIENT_SECRET=
# DIIA_REDIRECT_URI=http://localhost:3000/auth/diia/callback

# LinkedIn OAuth
# LINKEDIN_CLIENT_ID=
# LINKEDIN_CLIENT_SECRET=
# LINKEDIN_REDIRECT_URI=http://localhost:3000/auth/linkedin/callback

# Blockchain (MetaMask, Solana)
# BLOCKCHAIN_NETWORK=sepolia
# INFURA_PROJECT_ID=
# SOLANA_RPC_URL=https://api.devnet.solana.com

# Security
JWT_SECRET=change-this-in-production
SESSION_SECRET=change-this-in-production
ENCRYPTION_KEY=change-this-in-production

# Analytics & Monitoring (optional)
# SENTRY_DSN=
# ANALYTICS_ENABLED=false
