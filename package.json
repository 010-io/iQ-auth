{
  "name": "iq-auth",
  "version": "0.1.0",
  "private": true,
  "description": "Модульна AI-driven система авторизації з криптографічним ланцюгом та мультифакторною ідентифікацією",
  "author": "Igor Omelchenko (010io)",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/010-io/iQ-auth.git"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "scripts": {
    "build": "pnpm -r run build",
    "dev": "pnpm -r --parallel run dev",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "test:integration": "jest --testPathPattern=test/integration",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx",
    "lint:fix": "eslint . --ext .ts,.tsx,.js,.jsx --fix",
    "typecheck": "tsc --noEmit",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md,yml,yaml}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md,yml,yaml}\"",
    "clean": "pnpm -r run clean && rm -rf node_modules",
    "bump-version": "node scripts/bump-version.js",
    "publish-all": "node scripts/publish-all.js",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.19",
    "@typescript-eslint/eslint-plugin": "^7.0.1",
    "@typescript-eslint/parser": "^7.0.1",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-prettier": "^5.1.3",
    "husky": "^9.0.10",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.2",
    "prettier": "^3.2.5",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  },
  "keywords": [
    "authentication",
    "authorization",
    "auth",
    "fido2",
    "webauthn",
    "biometric",
    "blockchain",
    "diia",
    "gov-tech",
    "ai",
    "multi-factor",
    "mfa",
    "identity",
    "security",
    "ukraine"
  ]
}
